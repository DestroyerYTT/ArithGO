<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:id="@+id/question_ll"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Question Â¿?"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"></TextView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/puzzle"></ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="What is the result of :"
        android:textColor="#000"
        android:id="@+id/what_is_tv"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/question_ll"
        android:textSize="25sp"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:id="@+id/operation_ll"
        android:layout_below="@+id/what_is_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num1_tv"
        android:text="N1"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="30sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/operator_tv"
            android:text="*"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num2_tv"
            android:text="N2"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="30sp"></TextView>

    </LinearLayout>

    <EditText
        android:layout_above="@+id/generate_btn"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="20dp"
        android:inputType="number"
        android:id="@+id/input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/generate_btn"
        android:text="Generate Puzzle"
        android:layout_marginBottom="50dp"
        android:layout_above="@id/question_points_tv"
        android:layout_marginHorizontal="100dp">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_points_tv"
        android:layout_marginBottom="20dp"
        android:text="You have 0 points"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/return_btn"
        android:textSize="20sp"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/return_btn"
        android:text="Return to map"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="100dp">
    </Button>

</RelativeLayout>